{%- assign people = page.children -%}
{%- assign size = people.size -%}
{%- assign i = 0 -%}
Size: {{ size }}
{
    {% for person in people %}
    {%- assign i = i | plus: 1 -%}
    "{{ person.name | downcase | replace: " ", "-" }}": {
        "name": "{{ person.name }}"
    }{% if i < size %},{% endif %}
    {% endfor %}
}